<% include ../partials/header %>

<div class="container post-container text-center">
  <h1 class="results text-center display-4"><i class="fas fa-portrait"></i> Edit <%= foundPic.name %></h1>
  <img id="editImage" class="showImage" src="<%= foundPic.image %>">
  <form action="/diet/<%= foundPic._id %>?_method=PUT" method="POST">
    <div class="form-group">
      <input type="text" name="diet[name]" class="form-control" value="<%= foundPic.name %>">
    </div>
    <div class="form-group">
      <input type="text" name="diet[image]" class="form-control" value="<%= foundPic.image %>">
    </div>
    <button type="submit" class="btn btn-success">Submit</button>
  </form>
</div>




<% include ../partials/footer %>