<% pageTitle= "Edit " + foundPic.name %>
<% include ../partials/header %>

<div class="container post-container text-center">
  <h1 class="results text-center display-4"><i class="fas fa-portrait"></i> Edit <%= foundPic.name %></h1>
  <img id="editImage" class="showImage" src="<%= foundPic.image %>">
  <form action="/diet/<%= foundPic._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
    <div class="form-group">
      <input type="text" name="name" class="form-control" value="<%= foundPic.name %>">
    </div>
    <div class="form-group text-left">
      <label for="image">Image:</label>
      <input type="file" id="image" name="image" accept="image/*">
    </div>
    <button type="submit" class="btn btn-success btn-block">Submit</button>
  </form>
</div>




<% include ../partials/footer %>